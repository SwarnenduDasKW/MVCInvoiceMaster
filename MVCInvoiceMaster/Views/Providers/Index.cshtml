@model IEnumerable<MVCInvoiceMaster.Models.Provider>

@{
    ViewBag.Title = "Index";
}

<p></p>
<p></p>
<h4>All Providers</h4>
<p></p>
<p></p>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompanyLogo)
        </th>
        <th>Upload New Logo</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
           <img src="@item.CompanyLogo" alt="Company Logo" width="100px" />
            
        </td>
        <td>
           @* @Html.ActionLink("Upload", "Upload", new { id = item.ProviderID }, new { @class = "btn btn-primary"}) |*@
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#imageUploadModal">New Image</button>
        </td>
    </tr>
}

</table>

<!-- Modal -->
<div class="modal fade" id="imageUploadModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Upload New Logo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("UpdateLogoImage","Providers",FormMethod.Post,new { enctype = "multipart/form-data"}))
            {
            <div class="modal-body">
                <fieldset>
                    <label for="Image">Upload Logo: </label>
                    <input type="file" name="Image" accept=".jpg, .jpeg, .png" id="Image"/>
                    <div class="preview">
                        <p>@ViewBag.Message</p>
                    </div>
                </fieldset>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary" id="ImageUpload">Upload</button>
            </div>
            }
        </div>
    </div>
</div>


