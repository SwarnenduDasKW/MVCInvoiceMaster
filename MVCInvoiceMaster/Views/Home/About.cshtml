    </div>
    <div>
        @ViewBag.AddFbMsg
    </div>
</div>

<script>
    $(document).ready(function () {

        $(function () {
            $("#accordion").accordion();
        });

        $("form").submit(function () {
            var s_name = $('#name').val();
            var s_email = $('#email').val();
            var s_phone = $('#phone').val();
            var s_feedback = $('#feedback').val();
            var s_url = $('#contactusform').data('url');
            
            $.ajax({
                type: "POST",
                url: s_url,
                data: { name: s_name, email: s_email, phone: s_phone, feedback: s_feedback },
                datatype: "json",
                contenttype: "application/json",
                success: function () { },
                error: function () { }
            });
        });

    });
</script>